{% extends '../index.twig' %}
{% block content %}
	<h2>Add / Edit</h2>
	{% if user is defined %}
<form method="POST" action="/users/{{user._id}}?_method=PUT">
	{% else %}
<form method="POST" action="/users/add">
	{% endif %}
			
			<table class="table-fill">
				<tr>
					<td class="label">
						<label for="name">Name : </label>
					</td>
					<td>
						<input type="text" class="name" value="{{user.name}}" name="name" id="name">
					</td>
				</tr>
				<tr>
					<td class="label">
						<label for="email">Email : </label>
					</td>
					<td>
						<input type="text" class="email" value="{{user.email}}" name="email" id="email">
					</td>
				</tr>
			<tr>
				<td class="label">
					<label for="password">Password : </label>
				</td>
				<td>
					<input class="password" type="password" value="" name="password" id="password">
				</td>
			</tr>
			<tr>
				<td class="label">
					<label for="passwordRepeat">Repeat password : </label>
				</td>
				<td>
					<input class="passwordRepeat" type="password" value="" name="passwordRepeat" id="passwordRepeat">
					<input type="hidden" name="userid" value="{{user._id}}" id="userid">
				</td>
			</tr>
			<tr>
				<td colspan=2 class="submit">
					<input class="submit" type="submit"/>
				</td>
			</tr>
		</form>
	</table>
	<script src="/js/accountCreationCheck.js"></script> 
{% endblock %}